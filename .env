# API Keys
# Required
OPENAI_API_KEY=your_openai_api_key

# Optional: PEP Database APIs (paid services)
OPENSANCTIONS_API_KEY=your_opensanctions_api_key
WORLDCHECK_API_KEY=your_worldcheck_api_key  # Refinitiv World-Check (paid)
DOWJONES_API_KEY=your_dowjones_api_key  # Dow Jones Risk & Compliance (paid)

# Optional: News APIs (paid services)
BING_API_KEY=your_bing_api_key
LEXISNEXIS_API_KEY=your_lexisnexis_api_key  # (paid)
FACTIVA_API_KEY=your_factiva_api_key  # Dow Jones Factiva (paid)

# Optional: Proxy Configuration
PROXY_URL=http://your-proxy-url:port
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=86400  # 24 hours in seconds
CACHE_DIR=.cache

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds